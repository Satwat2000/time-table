<% let RC = "row D D"+i%>
<div class="<%= RC %>">
    <% console.log(RC) %>
    <% for(let j=0 ;j<=11; j++){ %>
    <% if(j==0){ %>
    <% var CC = "col-1 day my-auto"; %>
    <% var SU = Days[i-1]; %>
    <% var SN=" "; %>
    <% var TN=" "; %>
    <% } else{ %>
    <% var CC = "col-1 T"+ j+" border T-Table"; %>
    <% } %>
    <% console.log("...."+CC) %>
    <div class="<%= CC  %> text-center">
        <div class="<%= SN  %>">.</div>
        <div class="<%= SU  %>">.</div>
        <div class="<%= TN  %>">.</div>
    </div>
    <% } %>
</div>
<% } %>

<form action="/" method="post" class="container entry">
    <div class="D row text-center justify-content-center">
        <div class="col-3 form-group">
            <div class="form-group">
                <label for="S">Subject Name</label>
                <input type="text" name="SName:" id="S" class="form-control">
            </div>
            <div class="form-group mt-1">
                <label class="" for="C">Credits</label>
                <input class="form-control" type="number" name="Credits" id="C" max="12" min=0>
