                    <option value="S9">Slot-S9</option>
                    <option value="S10">Slot-S10</option>
                    <option value="S11">Slot-S11</option>
                </select>
            </div>
            <div class="form-group">
                <label class="" for="slot">LAB Slot</label>
                <select class="form-control custom-select" id="slot">
                    <option selected>Choose...</option>
                    <option value="S1">Slot-S111</option>
                </select>
            </div>
        </div>
    </div>

</form>

