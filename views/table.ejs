<% var Days = ["Mon", "Tue", "Wed", "Thu", "Fri"]; %>


<div class="row D">
    <div class="col-1 top">Day-Time</div>
    <% time.forEach(function(elem){ %>
    <div class="col-1 border top text-center">
        <%= elem %>
    </div>
    <% })%>
</div>


